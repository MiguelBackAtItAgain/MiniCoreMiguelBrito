@model IEnumerable<MiniCore.Models.Cruce>

@{
    ViewData["Title"] = "Sumatoria";
}

<h1>Filtrado y Cálculo de Contratos</h1>

<form asp-controller="Calculo" asp-action="Index">
    <p>
        Desde: <input type="date" name="fechaini" />
        Hasta: <input type="date" name="fechafin" />
        <input type="submit" value="Buscar" class="btn btn-sm btn-danger" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Suma de Montos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SumaMontos)
                </td>
            </tr>
        }
    </tbody>
</table>

<label>
    Total:
    @{
        var suma = Model.Sum(c => c.SumaMontos);
        <p>@suma</p>
    }
</label>

